Xft.dpi: 200
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

/* urxvt */
urxvt*saveLines: 1000
urxvt*scrollBar: off
urxvt*font:	 xft:Inconsolata:size=12, xft:DejaVuSansMono:size=12
urxvt*urgentOnBell: on

#define base00 #2c3e50
